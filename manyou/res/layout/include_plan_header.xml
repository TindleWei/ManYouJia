<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_avatar"
                style="@style/AvatarCircleSmall"
                android:src="@drawable/gravatar_icon" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/NormalText"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/iv_avatar"
                android:text="UserName"
                android:textColor="@color/font_2"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textColor="@color/font_2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_residence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="西安人"
                    android:textColor="@color/font_2"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bg_icon_man" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:background="#ddcccccc" />

        <TextView
            android:id="@+id/tv_destination"
            style="@style/NormalText"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="目的地是白俄罗斯"
            android:textColor="@color/font_2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_plan_type"
            style="@style/NormalText"
            android:layout_gravity="center_horizontal"
            android:text="目的-和谁-寻求"
            android:textColor="@color/font_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_startdate"
            style="@style/SubtitleText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="9.1~9.9"
            android:textColor="@color/font_2"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/layout_plan_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/iv_plan_pho1"
                    style="@style/ImagePhotoThree"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gravatar_image"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_plan_pho2"
                    style="@style/ImagePhotoThree"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gravatar_image"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_plan_pho3"
                    style="@style/ImagePhotoThree"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gravatar_image"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_postscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp"
            android:singleLine="false"
            android:text="1我在XX准备去XX，有没有XX可以和我一起去的，我需要罗卜青菜各有所爱，好了。"
            android:textColor="@color/font_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_createTime"
            style="@style/SubtitleText"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="发布时间"
            android:textColor="@color/font_2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

</LinearLayout>