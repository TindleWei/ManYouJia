<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/type_tv_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="目的"
            android:textColor="@color/font_1" />

        <TextView
            android:id="@+id/type_tv_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="和谁"
            android:textColor="@color/font_1" />

        <TextView
            android:id="@+id/type_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="寻求"
            android:textColor="@color/font_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/type_for"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/type_with"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/type_seek"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_plantype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <com.manyou.wei.view.HorizontalListView
            android:id="@+id/horizon_listview"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:descendantFocusability="blocksDescendants" >
        </com.manyou.wei.view.HorizontalListView>
    </LinearLayout>

</LinearLayout>