<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_white_bg"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/iv_avatar"
        style="@style/AvatarCard"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/default_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:paddingLeft="4dp" >

        <TextView
            android:id="@+id/tv_destination"
            style="@style/SubtitleText"
            android:paddingTop="4dp"
            android:text="目的地"
            android:textColor="#404040"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/SubtitleText"
            android:layout_alignBottom="@id/tv_destination"
            android:layout_toRightOf="@id/tv_destination"
            android:paddingTop="4dp"
            android:text=""
            android:textColor="@color/font_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/SecondText"
            android:layout_alignLeft="@id/tv_destination"
            android:layout_below="@id/tv_destination"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:text="2014/1/12 星期六"
            android:textColor="@color/font_2"
            android:textSize="12dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@id/tv_date"
            android:layout_marginRight="4dp"
            android:background="@color/font_21" />

        <TextView
            android:id="@+id/tv_note"
            style="@style/SecondText"
            android:layout_alignLeft="@id/tv_destination"
            android:layout_below="@id/tv_date"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="计划与朋友一起去游玩，寻求同伴,希望找到吃货们一起吃小吃。"
            android:textColor="@color/font_2"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_destination"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_type"
                style="@style/SecondText"
                android:text="目的-和谁-寻求"
                android:textColor="@color/font_2"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nonelayout_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="4dp" >

            <TextView
                android:id="@+id/tv_plan_from"
                style="@style/SecondText"
                android:text="出发城市 北京"
                android:textColor="@color/font_2"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>